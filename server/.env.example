# Configuración del servidor
PORT=3000

# Configuración de la base de datos
MONGO_URI=mongodb+srv://tu_usuario:tu_password@tu_cluster.mongodb.net/tu_base_de_datos

# Configuración de email (Gmail)
# IMPORTANTE: EMAIL_PASSWORD debe ser una contraseña de aplicación de Gmail, no tu contraseña normal
# Para obtenerla: Google Account > Seguridad > Verificación en dos pasos > Contraseñas de aplicaciones
EMAIL=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_de_aplicacion

# Configuración JWT
JSON_WEB_TOKEN_SECRET_KEY=tu_secret_key_muy_seguro
JSON_WEB_REFRESHTOKEN_SECRET_KEY=tu_refresh_secret_key_muy_seguro

# URL del frontend
FRONTEND_URL=http://localhost:5173

# Configuración de Cloudinary
cloudinary_cloud_name=tu_cloud_name
cloudinary_api_key=tu_api_key
cloudinary_api_key_secret=tu_api_secret
